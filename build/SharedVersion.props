<Project DefaultTargets="Build" 
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <Product>ProDataGrid</Product>
    <VersionPrefix>11.3.9</VersionPrefix>
    <VersionSuffix>preview.9</VersionSuffix>
    <Authors>Wiesław Šoltés</Authors>
    <Copyright>Copyright $([System.DateTime]::Now.ToString(`yyyy`)) &#169; Wiesław Šoltés</Copyright>
    <PackageProjectUrl>https://github.com/wieslawsoltes/ProDataGrid</PackageProjectUrl>
    <RepositoryUrl>https://github.com/wieslawsoltes/ProDataGrid</RepositoryUrl>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>Icon.png</PackageIcon>
    <PackageDescription>ProDataGrid is a high-performance DataGrid control for Avalonia, a cross-platform UI framework for .NET.</PackageDescription>
    <PackageTags>avalonia;avaloniaui;datagrid;prodatagrid;mvvm;net;netstandard</PackageTags>
    <PackageReleaseNotes>https://github.com/wieslawsoltes/ProDataGrid/releases</PackageReleaseNotes>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)/avalonia.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)/../readme.md" Pack="true" PackagePath="/" Visible="false" />
    <None Include="$(MSBuildThisFileDirectory)/Assets/Icon.png" Pack="true" PackagePath="/" Visible="false"/>
  </ItemGroup>

</Project>
