<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Include Generic.xaml with all ControlThemes -->
  <StyleInclude Source="/Themes/Generic.xaml" />

  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="DataGridColumnHeaderForegroundBrush" Color="{DynamicResource SystemBaseMediumColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="{DynamicResource SystemAltHighColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderPressedBackgroundBrush" Color="{DynamicResource SystemListMediumColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderDraggedBackgroundBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderBackgroundBrush" Color="{DynamicResource SystemChromeMediumColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderPressedBackgroundBrush" Color="{DynamicResource SystemListMediumColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridRowHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridCellHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridRowInvalidBrush" Color="{DynamicResource SystemErrorTextColor}" />
          <SolidColorBrush x:Key="DataGridRowWarningBrush" Color="#F59E0B" />
          <SolidColorBrush x:Key="DataGridRowInfoBrush" Color="#22C55E" />
          <SolidColorBrush x:Key="DataGridRowDropIndicatorBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedHoveredBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedUnfocusedBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridCellSelectedBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellSelectedHoveredBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedHoveredBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellSelectedUnfocusedBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedUnfocusedBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellSelectedHoveredUnfocusedBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedHoveredUnfocusedBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellFocusVisualPrimaryBrush" Color="{DynamicResource SystemBaseHighColor}" />
          <SolidColorBrush x:Key="DataGridCellFocusVisualSecondaryBrush" Color="{DynamicResource SystemAltMediumColor}" />
          <SolidColorBrush x:Key="DataGridSelectionOutlineBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridFillHandleBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridCellInvalidBrush" Color="{DynamicResource SystemErrorTextColor}" />
          <SolidColorBrush x:Key="DataGridCellWarningBrush" Color="#F59E0B" />
          <SolidColorBrush x:Key="DataGridCellInfoBrush" Color="#22C55E" />
          <SolidColorBrush x:Key="DataGridGridLinesBrush" Opacity="0.4" Color="{DynamicResource SystemBaseMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridDetailsPresenterBackgroundBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridSummaryRowBackgroundBrush" Color="{DynamicResource SystemChromeMediumColor}" />
          <SolidColorBrush x:Key="DataGridSummaryRowForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
          <SolidColorBrush x:Key="DataGridTotalSummaryRowBackgroundBrush" Color="{DynamicResource SystemChromeMediumColor}" />
          <SolidColorBrush x:Key="DataGridGroupSummaryRowBackgroundBrush" Color="{DynamicResource SystemChromeLowColor}" />
          <SolidColorBrush x:Key="DataGridFilterFlyoutBackgroundBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridSearchMatchBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource ListAccentLowOpacity}" />
          <SolidColorBrush x:Key="DataGridSearchCurrentBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource ListAccentMediumOpacity}" />
          <SolidColorBrush x:Key="DataGridSearchMatchForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
          <SolidColorBrush x:Key="DataGridColumnHeaderForegroundBrush" Color="{DynamicResource SystemBaseMediumColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="{DynamicResource SystemAltHighColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderPressedBackgroundBrush" Color="{DynamicResource SystemListMediumColor}" />
          <SolidColorBrush x:Key="DataGridColumnHeaderDraggedBackgroundBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderBackgroundBrush" Color="{DynamicResource SystemChromeMediumColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderPressedBackgroundBrush" Color="{DynamicResource SystemListMediumColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
          <SolidColorBrush x:Key="DataGridRowGroupHeaderHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridRowHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridCellHoveredBackgroundBrush" Color="{DynamicResource SystemListLowColor}" />
          <SolidColorBrush x:Key="DataGridRowInvalidBrush" Color="{DynamicResource SystemErrorTextColor}" />
          <SolidColorBrush x:Key="DataGridRowWarningBrush" Color="#F59E0B" />
          <SolidColorBrush x:Key="DataGridRowInfoBrush" Color="#22C55E" />
          <SolidColorBrush x:Key="DataGridRowDropIndicatorBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedHoveredBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedUnfocusedBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridCellSelectedBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellSelectedHoveredBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedHoveredBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellSelectedUnfocusedBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedUnfocusedBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellSelectedHoveredUnfocusedBackgroundBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource DataGridRowSelectedHoveredUnfocusedBackgroundOpacity}" />
          <SolidColorBrush x:Key="DataGridCellFocusVisualPrimaryBrush" Color="{DynamicResource SystemBaseHighColor}" />
          <SolidColorBrush x:Key="DataGridCellFocusVisualSecondaryBrush" Color="{DynamicResource SystemAltMediumColor}" />
          <SolidColorBrush x:Key="DataGridSelectionOutlineBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridFillHandleBrush" Color="{DynamicResource SystemAccentColor}" />
          <SolidColorBrush x:Key="DataGridCellInvalidBrush" Color="{DynamicResource SystemErrorTextColor}" />
          <SolidColorBrush x:Key="DataGridCellWarningBrush" Color="#F59E0B" />
          <SolidColorBrush x:Key="DataGridCellInfoBrush" Color="#22C55E" />
          <SolidColorBrush x:Key="DataGridGridLinesBrush" Opacity="0.4" Color="{DynamicResource SystemBaseMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridDetailsPresenterBackgroundBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridSummaryRowBackgroundBrush" Color="{DynamicResource SystemChromeMediumColor}" />
          <SolidColorBrush x:Key="DataGridSummaryRowForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
          <SolidColorBrush x:Key="DataGridTotalSummaryRowBackgroundBrush" Color="{DynamicResource SystemChromeMediumColor}" />
          <SolidColorBrush x:Key="DataGridGroupSummaryRowBackgroundBrush" Color="{DynamicResource SystemChromeLowColor}" />
          <SolidColorBrush x:Key="DataGridFilterFlyoutBackgroundBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
          <SolidColorBrush x:Key="DataGridSearchMatchBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource ListAccentLowOpacity}" />
          <SolidColorBrush x:Key="DataGridSearchCurrentBrush"
                           Color="{DynamicResource SystemAccentColor}"
                           Opacity="{DynamicResource ListAccentMediumOpacity}" />
          <SolidColorBrush x:Key="DataGridSearchMatchForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>

      <!-- Opacity Resources -->
      <x:Double x:Key="ListAccentLowOpacity">0.6</x:Double>
      <x:Double x:Key="ListAccentMediumOpacity">0.8</x:Double>

      <!-- Sizing and Spacing -->
      <x:Double x:Key="DataGridSortIconMinWidth">32</x:Double>
      <x:Double x:Key="DataGridCellFontSize">15</x:Double>
      <x:Double x:Key="DataGridCellMinHeight">32</x:Double>
      <x:Double x:Key="DataGridColumnHeaderFontSize">12</x:Double>
      <x:Double x:Key="DataGridColumnHeaderMinHeight">32</x:Double>
      <x:Double x:Key="DataGridRowGroupHeaderFontSize">15</x:Double>
      <x:Double x:Key="DataGridRowGroupHeaderMinHeight">32</x:Double>
      <x:Double x:Key="DataGridSummaryRowMinHeight">32</x:Double>
      <x:Double x:Key="DataGridColumnHeaderIconSize">12</x:Double>
      <x:Double x:Key="DataGridColumnHeaderIconSpacing">4</x:Double>
      <x:Double x:Key="DataGridRowHeaderDragGripSize">12</x:Double>
      <x:Double x:Key="DataGridRowGroupHeaderExpanderSize">12</x:Double>
      <x:Double x:Key="DataGridHierarchicalExpanderSize">28</x:Double>
      <x:Double x:Key="DataGridHierarchicalExpanderGlyphSize">10</x:Double>
      <x:Double x:Key="DataGridDropLocationIndicatorWidth">2</x:Double>
      <Thickness x:Key="DataGridSelectionOutlineThickness">2</Thickness>
      <x:Double x:Key="DataGridFillHandleSize">6</x:Double>

      <!-- Grid Sizing -->
      <GridLength x:Key="DataGridRowHeaderIndicatorWidth">16</GridLength>

      <!-- Margins and Paddings -->
      <Thickness x:Key="DataGridCellTextBlockMargin">12,0,12,0</Thickness>
      <Thickness x:Key="DataGridCellComboBoxPadding">8,0</Thickness>
      <Thickness x:Key="DataGridColumnHeaderPadding">12,0,0,0</Thickness>
      <Thickness x:Key="DataGridColumnHeaderSortIconMargin">0,0,4,0</Thickness>
      <Thickness x:Key="DataGridRowGroupHeaderExpanderMargin">12,0,0,0</Thickness>
      <Thickness x:Key="DataGridRowGroupHeaderContentMargin">12,0,0,0</Thickness>
      <Thickness x:Key="DataGridRowGroupHeaderTextMargin">4,0,0,0</Thickness>
      <Thickness x:Key="DataGridHierarchicalPresenterContentMargin">6,0,0,0</Thickness>
      <Thickness x:Key="DataGridFilterFlyoutPadding">12</Thickness>
      <Thickness x:Key="DataGridBorderThickness">0</Thickness>
      <CornerRadius x:Key="DataGridFilterFlyoutCornerRadius">4</CornerRadius>

      <!-- GridLines -->
      <DataGridGridLinesVisibility x:Key="DataGridGridLinesVisibility">None</DataGridGridLinesVisibility>

      <!-- Transparent Brush (defined locally to avoid StaticResource lookup issues) -->
      <SolidColorBrush x:Key="DataGridTransparentBrush" Color="Transparent" />
      
      <!-- Static Resource References -->
      <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="Transparent" />
      <x:Double x:Key="DataGridRowSelectedBackgroundOpacity">0.6</x:Double>
      <x:Double x:Key="DataGridRowSelectedHoveredBackgroundOpacity">0.8</x:Double>
      <x:Double x:Key="DataGridRowSelectedUnfocusedBackgroundOpacity">0.6</x:Double>
      <x:Double x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundOpacity">0.8</x:Double>
      <SolidColorBrush x:Key="DataGridCellBackgroundBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridCurrencyVisualPrimaryBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridFillerColumnGridLinesBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridBorderBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridDropLocationIndicatorBackground" Color="{DynamicResource SystemAccentColor}" />
      <StaticResource x:Key="DataGridDropLocationIndicatorBrush" ResourceKey="DataGridDropLocationIndicatorBackground" />

    </ResourceDictionary>
  </Styles.Resources>
</Styles>
