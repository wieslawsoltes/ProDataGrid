<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:collections="using:Avalonia.Collections"
        xmlns:controls="clr-namespace:Avalonia.Controls"
        xmlns:filtering="clr-namespace:Avalonia.Controls.DataGridFiltering"
        xmlns:pivoting="clr-namespace:Avalonia.Controls.DataGridPivoting"
        xmlns:reporting="clr-namespace:Avalonia.Controls.DataGridReporting"
        xmlns:banding="clr-namespace:Avalonia.Controls.DataGridBanding">
  <Styles.Resources>
    <ResourceDictionary>
      <!-- StreamGeometry Icons -->
