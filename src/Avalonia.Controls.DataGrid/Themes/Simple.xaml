<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Avalonia.Controls.Themes.DataGridSimpleTheme">

  <!-- Include Generic.xaml with all ControlThemes -->
  <StyleInclude Source="/Themes/Generic.xaml" />

  <Styles.Resources>
    <ResourceDictionary>
      
      <!-- Keep compact density styles outside theme dictionaries so they can be activated by theme API. -->
      <ResourceInclude x:Key="CompactStyles" Source="/Themes/DensityStyles/Simple.Compact.xaml" />

      <!-- Brushes -->
      <SolidColorBrush x:Key="DataGridColumnHeaderForegroundBrush" Color="{DynamicResource ThemeForegroundColor}" />
      <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="{DynamicResource ThemeControlMidColor}" />
      <SolidColorBrush x:Key="DataGridColumnHeaderHoveredBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridColumnHeaderPressedBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridColumnHeaderDraggedBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridColumnHeaderSelectedBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="0.2" />
      <SolidColorBrush x:Key="DataGridColumnHeaderSelectedHoveredBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="0.3" />
      <SolidColorBrush x:Key="DataGridColumnHeaderSelectedForegroundBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridColumnHeaderCurrentBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="0.4" />
      <SolidColorBrush x:Key="DataGridColumnHeaderCurrentForegroundBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridRowGroupHeaderBackgroundBrush" Color="{DynamicResource ThemeControlMidHighColor}" />
      <SolidColorBrush x:Key="DataGridRowGroupHeaderPressedBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridRowGroupHeaderForegroundBrush" Color="{DynamicResource ThemeForegroundColor}" />
      <SolidColorBrush x:Key="DataGridRowGroupHeaderHoveredBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridRowHoveredBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridCellHoveredBackgroundBrush" Color="{DynamicResource ThemeControlHighColor}" />
      <SolidColorBrush x:Key="DataGridRowInvalidBrush" Color="{DynamicResource ErrorColor}" />
      <SolidColorBrush x:Key="DataGridRowWarningBrush" Color="#F59E0B" />
      <SolidColorBrush x:Key="DataGridRowInfoBrush" Color="#22C55E" />
      <SolidColorBrush x:Key="DataGridRowSelectedBackgroundBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridRowSelectedHoveredBackgroundBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridRowSelectedUnfocusedBackgroundBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridCellSelectedBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="{DynamicResource DataGridRowSelectedBackgroundOpacity}" />
      <SolidColorBrush x:Key="DataGridCellSelectedHoveredBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="{DynamicResource DataGridRowSelectedHoveredBackgroundOpacity}" />
      <SolidColorBrush x:Key="DataGridCellSelectedUnfocusedBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="{DynamicResource DataGridRowSelectedUnfocusedBackgroundOpacity}" />
      <SolidColorBrush x:Key="DataGridCellSelectedHoveredUnfocusedBackgroundBrush"
                       Color="{DynamicResource ThemeAccentColor2}"
                       Opacity="{DynamicResource DataGridRowSelectedHoveredUnfocusedBackgroundOpacity}" />
      <SolidColorBrush x:Key="DataGridCellFocusVisualPrimaryBrush" Color="{DynamicResource ThemeBorderHighColor}" />
      <SolidColorBrush x:Key="DataGridCellFocusVisualSecondaryBrush" Color="{DynamicResource ThemeBorderMidColor}" />
      <SolidColorBrush x:Key="DataGridSelectionOutlineBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridFillHandleBrush" Color="{DynamicResource ThemeAccentColor2}" />
      <SolidColorBrush x:Key="DataGridCellInvalidBrush" Color="{DynamicResource ErrorColor}" />
      <SolidColorBrush x:Key="DataGridCellWarningBrush" Color="#F59E0B" />
      <SolidColorBrush x:Key="DataGridCellInfoBrush" Color="#22C55E" />
      <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="{DynamicResource ThemeBorderHighColor}" />
      <SolidColorBrush x:Key="DataGridDetailsPresenterBackgroundBrush" Color="{DynamicResource ThemeControlMidColor}" />
      <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridCellBackgroundBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridCurrencyVisualPrimaryBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridFillerColumnGridLinesBrush" Color="Transparent" />
      <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="{DynamicResource ThemeBackgroundColor}" />
      <SolidColorBrush x:Key="DataGridBorderBrush" Color="{DynamicResource ThemeBorderLowColor}" />
      <SolidColorBrush x:Key="DataGridDropLocationIndicatorBrush" Color="{DynamicResource ThemeBorderHighColor}" />
      <SolidColorBrush x:Key="DataGridFilterFlyoutBackgroundBrush" Color="{DynamicResource ThemeBackgroundColor}" />
      <SolidColorBrush x:Key="DataGridSearchMatchBrush" Color="{DynamicResource ThemeAccentColor4}" />
      <SolidColorBrush x:Key="DataGridSearchCurrentBrush" Color="{DynamicResource ThemeAccentColor3}" />
      <SolidColorBrush x:Key="DataGridSearchMatchForegroundBrush" Color="{DynamicResource ThemeForegroundColor}" />
      <StaticResource x:Key="DataGridRowDropIndicatorBrush" ResourceKey="HighlightBrush" />

      <!-- Opacity Resources -->
      <x:Double x:Key="DataGridRowSelectedBackgroundOpacity">1</x:Double>
      <x:Double x:Key="DataGridRowSelectedHoveredBackgroundOpacity">1</x:Double>
      <x:Double x:Key="DataGridRowSelectedUnfocusedBackgroundOpacity">1</x:Double>
      <x:Double x:Key="DataGridRowSelectedHoveredUnfocusedBackgroundOpacity">1</x:Double>

      <!-- Sizing and Spacing -->
      <x:Double x:Key="DataGridSortIconMinWidth">20</x:Double>
      <x:Double x:Key="DataGridCellFontSize">14</x:Double>
      <x:Double x:Key="DataGridCellMinHeight">24</x:Double>
      <x:Double x:Key="DataGridColumnHeaderFontSize">14</x:Double>
      <x:Double x:Key="DataGridColumnHeaderMinHeight">24</x:Double>
      <x:Double x:Key="DataGridRowGroupHeaderFontSize">14</x:Double>
      <x:Double x:Key="DataGridRowGroupHeaderMinHeight">20</x:Double>
      <x:Double x:Key="DataGridSummaryRowMinHeight">24</x:Double>
      <x:Double x:Key="DataGridColumnHeaderIconSize">12</x:Double>
      <x:Double x:Key="DataGridColumnHeaderIconSpacing">4</x:Double>
      <x:Double x:Key="DataGridColumnHeaderDragGripSize">10</x:Double>
      <x:Double x:Key="DataGridRowHeaderDragGripSize">12</x:Double>
      <x:Double x:Key="DataGridRowGroupHeaderExpanderSize">12</x:Double>
      <x:Double x:Key="DataGridHierarchicalExpanderSize">28</x:Double>
      <x:Double x:Key="DataGridHierarchicalExpanderGlyphSize">10</x:Double>
      <x:Double x:Key="DataGridDropLocationIndicatorWidth">2</x:Double>
      <Thickness x:Key="DataGridSelectionOutlineThickness">2</Thickness>
      <x:Double x:Key="DataGridFillHandleSize">6</x:Double>

      <!-- Grid Sizing -->
      <GridLength x:Key="DataGridRowHeaderIndicatorWidth">16</GridLength>

      <!-- Margins and Paddings -->
      <Thickness x:Key="DataGridCellTextBlockMargin">4</Thickness>
      <Thickness x:Key="DataGridCellComboBoxPadding">4,0</Thickness>
      <Thickness x:Key="DataGridColumnHeaderPadding">4</Thickness>
      <Thickness x:Key="DataGridColumnHeaderSortIconMargin">0,0,4,0</Thickness>
      <Thickness x:Key="DataGridColumnHeaderDragGripMargin">2,0,2,0</Thickness>
      <Thickness x:Key="DataGridRowGroupHeaderExpanderMargin">2,0,0,0</Thickness>
      <Thickness x:Key="DataGridRowGroupHeaderContentMargin">0,1,0,1</Thickness>
      <Thickness x:Key="DataGridRowGroupHeaderTextMargin">4,0,0,0</Thickness>
      <Thickness x:Key="DataGridHierarchicalPresenterContentMargin">6,0,0,0</Thickness>
      <Thickness x:Key="DataGridFilterFlyoutPadding">12</Thickness>
      <Thickness x:Key="DataGridBorderThickness">1</Thickness>
      <CornerRadius x:Key="DataGridFilterFlyoutCornerRadius">4</CornerRadius>

      <!-- Additional tokenized metrics -->
      <x:Double x:Key="DataGridFilterEditorSpacing">8</x:Double>
      <x:Double x:Key="DataGridFilterEditorActionSpacing">6</x:Double>
      <x:Double x:Key="DataGridFilterTextEditorWidth">240</x:Double>
      <x:Double x:Key="DataGridFilterNumberEditorWidth">240</x:Double>
      <x:Double x:Key="DataGridFilterNumberInputWidth">100</x:Double>
      <x:Double x:Key="DataGridFilterDateEditorWidth">260</x:Double>
      <x:Double x:Key="DataGridFilterDateEditorFieldSpacing">6</x:Double>
      <x:Double x:Key="DataGridFilterEnumEditorWidth">240</x:Double>
      <x:Double x:Key="DataGridPivotHeaderSegmentsSpacing">2</x:Double>
      <x:Double x:Key="DataGridColumnBandHeaderSegmentsSpacing">2</x:Double>
      <x:Double x:Key="DataGridFilterButtonSize">22</x:Double>
      <x:Double x:Key="DataGridFilterGlyphSize">12</x:Double>
      <x:Double x:Key="DataGridFilterGlyphStrokeThickness">1.2</x:Double>
      <Thickness x:Key="DataGridValidationInlineIndicatorMargin">8,0</Thickness>
      <x:Double x:Key="DataGridValidationInlineIndicatorSize">14</x:Double>
      <x:Double x:Key="DataGridValidationInlineIndicatorStrokeThickness">2</x:Double>
      <x:Double x:Key="DataGridCellValidationStrokeThickness">1</x:Double>
      <x:Double x:Key="DataGridCellFocusPrimaryStrokeThickness">2</x:Double>
      <Thickness x:Key="DataGridCellFocusSecondaryMargin">2</Thickness>
      <x:Double x:Key="DataGridCellFocusSecondaryStrokeThickness">1</x:Double>
      <x:Double x:Key="DataGridCellGridLineWidth">1</x:Double>
      <x:Double x:Key="DataGridColumnHeaderVerticalSeparatorWidth">1</x:Double>
      <x:Double x:Key="DataGridColumnHeaderDragGripIconStrokeThickness">0</x:Double>
      <x:Double x:Key="DataGridColumnHeaderDragIndicatorOpacity">0.5</x:Double>
      <Thickness x:Key="DataGridTopLeftColumnHeaderBorderThickness">0,0,1,0</Thickness>
      <x:Double x:Key="DataGridTopLeftColumnHeaderSeparatorStrokeThickness">1</x:Double>
      <x:Double x:Key="DataGridTopLeftColumnHeaderSeparatorHeight">1</x:Double>
      <Thickness x:Key="DataGridRowHeaderBorderThickness">0,0,1,0</Thickness>
      <x:Double x:Key="DataGridRowHeaderHorizontalSeparatorHeight">1</x:Double>
      <Thickness x:Key="DataGridRowHeaderHorizontalSeparatorMargin">1,0,1,0</Thickness>
      <x:Double x:Key="DataGridRowHeaderDragGripIconStrokeThickness">0</x:Double>
      <x:Double x:Key="DataGridHierarchicalPresenterIndent">16</x:Double>
      <x:Double x:Key="DataGridHierarchicalDisabledGlyphOpacity">0</x:Double>
      <x:Double x:Key="DataGridRowBottomGridLineHeight">1</x:Double>
      <x:Double x:Key="DataGridRowGroupBottomGridLineHeight">1</x:Double>
      <x:Double x:Key="DataGridRowInvalidOpacity">0.4</x:Double>
      <x:Double x:Key="DataGridRowWarningOpacity">0.35</x:Double>
      <x:Double x:Key="DataGridRowInfoOpacity">0.35</x:Double>
      <x:Double x:Key="DataGridRowSearchMatchOpacity">0.18</x:Double>
      <x:Double x:Key="DataGridRowSearchCurrentOpacity">0.24</x:Double>
      <x:Double x:Key="DataGridRowDraggingOpacity">0.6</x:Double>
      <x:Double x:Key="DataGridRowDragOverInsideOpacity">0.08</x:Double>
      <x:Double x:Key="DataGridRowGroupCurrencyStrokeThickness">1</x:Double>
      <x:Double x:Key="DataGridRowGroupFocusPrimaryStrokeThickness">2</x:Double>
      <Thickness x:Key="DataGridRowGroupFocusSecondaryMargin">2</Thickness>
      <x:Double x:Key="DataGridRowGroupFocusSecondaryStrokeThickness">1</x:Double>
      <Thickness x:Key="DataGridSummaryRowBorderThickness">0,1,0,0</Thickness>
      <Thickness x:Key="DataGridSummaryCellBorderThickness">0,0,1,0</Thickness>
      <Thickness x:Key="DataGridRowGroupFooterBorderThickness">0,0,0,1</Thickness>
      <Thickness x:Key="DataGridFillHandleBorderThickness">1</Thickness>
      <CornerRadius x:Key="DataGridFillHandleCornerRadius">1</CornerRadius>
      <x:Double x:Key="DataGridSelectionOverlayInitialSize">0</x:Double>
      <x:Double x:Key="DataGridColumnHeadersSeparatorHeight">1</x:Double>
      <x:Double x:Key="DataGridColumnChooserItemsSpacing">6</x:Double>
      <Thickness x:Key="DataGridColumnChooserFlyoutPadding">8</Thickness>
      <x:Double x:Key="DataGridColumnChooserFlyoutMaxWidth">260</x:Double>
      <x:Double x:Key="DataGridColumnChooserFlyoutMaxHeight">320</x:Double>

    </ResourceDictionary>
  </Styles.Resources>
</Styles>
