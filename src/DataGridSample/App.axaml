<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DataGridSample.App"
             RequestedThemeVariant="Default">

  <Application.Styles>
    <FluentTheme />
    <!-- Include base Fluent theme for all component themes (DataGridCell, DataGridRow, etc.) -->
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
    <!-- Include v2 theme which overrides only DataGrid with ScrollViewer-based template -->
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.v2.xaml" />
  </Application.Styles>

</Application>
