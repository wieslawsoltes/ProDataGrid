<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataGridSample"
             xmlns:models="clr-namespace:DataGridSample.Models"
             x:Class="DataGridSample.FrozenColumnsPage"
             x:DataType="local:FrozenColumnsPage">
  <Grid RowDefinitions="Auto,Auto,*" Margin="0,0,0,4">
    <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="4" Margin="0,0,0,8">
      <TextBlock Classes="h2" Text="Frozen Columns" />
      <TextBlock TextWrapping="Wrap"
                 Text="First columns stay pinned while you horizontally scroll the remaining columns. Adjust the frozen count to see frozen and scrolling regions interact."/>
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
      <TextBlock Text="Frozen columns:" VerticalAlignment="Center"/>
      <NumericUpDown Minimum="0"
                     Maximum="4"
                     Value="{Binding FrozenColumnCount, Mode=TwoWay}"
                     Width="100" />
    </StackPanel>

    <DataGrid Grid.Row="2"
              ItemsSource="{Binding Items}"
              UseLogicalScrollable="True"
              FrozenColumnCount="{Binding FrozenColumnCount}"
              HorizontalScrollBarVisibility="Visible"
              HeadersVisibility="All"
              CanUserResizeColumns="True"
              CanUserReorderColumns="True"
              CanUserSortColumns="True"
              RowBackground="#08000000"
              GridLinesVisibility="Horizontal">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID"
                            Binding="{Binding Id}"
                            Width="80"
                            x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Name"
                            Binding="{Binding Name}"
                            Width="200"
                            x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Category"
                            Binding="{Binding Category}"
                            Width="200"
                            x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Description"
                            Binding="{Binding Description}"
                            Width="700"
                            x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Notes"
                            Binding="{Binding Notes}"
                            Width="600"
                            x:DataType="models:PixelItem" />
      </DataGrid.Columns>

      <DataGrid.Styles>
        <Style Selector="DataGridRow">
          <Setter Property="Header" Value="{Binding $self.Index}"/>
        </Style>
      </DataGrid.Styles>
    </DataGrid>
  </Grid>
</UserControl>
