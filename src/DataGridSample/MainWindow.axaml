<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DataGridSample"
        x:Class="DataGridSample.MainWindow"
        Title="ProDataGrid for Avalonia"
        Width="1000"
        Height="700"
        WindowStartupLocation="CenterScreen">

  <TabControl Margin="8">
    <TabItem Header="DataGrid Samples">
      <local:DataGridPage />
    </TabItem>
    <TabItem Header="Variable Height Scrolling">
      <local:VariableHeightPage />
    </TabItem>
    <TabItem Header="Pixel Columns">
      <local:PixelColumnsPage />
    </TabItem>
    <TabItem Header="Frozen Columns">
      <local:FrozenColumnsPage />
    </TabItem>
    <TabItem Header="Auto Columns">
      <local:AutoColumnsPage />
    </TabItem>
  </TabControl>

</Window>
