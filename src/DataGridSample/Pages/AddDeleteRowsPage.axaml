<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:DataGridSample.Models"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.AddDeleteRowsPage"
             x:DataType="viewModels:AddDeleteRowsViewModel">
  <UserControl.DataContext>
    <viewModels:AddDeleteRowsViewModel/>
  </UserControl.DataContext>

  <Grid RowDefinitions="Auto,Auto,*">
    <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="4" Margin="0,0,0,8">
      <TextBlock Classes="h2">Add and delete rows</TextBlock>
      <TextBlock Text="Toggle whether the grid shows the new item placeholder or accepts Delete key presses. Edit the last row to insert a new person, or press Delete to remove selected rows when allowed."
                 TextWrapping="Wrap" />
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
      <CheckBox Content="Allow adding rows" IsChecked="{Binding CanUserAddRows, Mode=TwoWay}" />
      <CheckBox Content="Allow deleting rows" IsChecked="{Binding CanUserDeleteRows, Mode=TwoWay}" />
      <Button Content="Reset sample data" Command="{Binding ResetCommand}" />
    </StackPanel>

    <DataGrid Grid.Row="2"
              Margin="12"
              ItemsSource="{Binding PeopleView}"
              IsReadOnly="False"
              CanUserAddRows="{Binding CanUserAddRows}"
              CanUserDeleteRows="{Binding CanUserDeleteRows}"
              CanUserResizeColumns="True"
              CanUserReorderColumns="True"
              HeadersVisibility="All">
      <DataGrid.Columns>
        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="2*" x:DataType="models:Person" />
        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="2*" x:DataType="models:Person" />
        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*" x:DataType="models:Person" />
        <DataGridCheckBoxColumn Header="Is Banned" Binding="{Binding IsBanned}" Width="*" x:DataType="models:Person" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
