<UserControl
    x:Class="DataGridSample.Pages.BetweenFilterOperatorPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
    x:DataType="viewModels:BetweenFilterOperatorViewModel"
    d:DesignHeight="720"
    d:DesignWidth="1100"
    mc:Ignorable="d">

  <UserControl.DataContext>
    <viewModels:BetweenFilterOperatorViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Text="Between filter operator (Int64 column)"
                 FontSize="18"
                 FontWeight="Bold" />
      <TextBlock TextWrapping="Wrap"
                 Text="Applies FilteringOperator.Between to an Int64 column using Int32 and Int64 bounds. This sample reproduces issue #257 without exceptions." />
    </StackPanel>

    <WrapPanel Grid.Row="1"
               Margin="0 4 0 0">
      <Button Content="Apply Between (Int32 5..10)"
              Margin="0 0 8 0"
              Command="{Binding ApplyInt32BoundsCommand}" />
      <Button Content="Apply Between (Int64 5..10)"
              Margin="0 0 8 0"
              Command="{Binding ApplyInt64BoundsCommand}" />
      <Button Content="Clear filter"
              Command="{Binding ClearFilterCommand}" />
    </WrapPanel>

    <TextBlock Grid.Row="2"
               Text="{Binding FilterSummary}"
               FontWeight="SemiBold" />

    <DataGrid Grid.Row="3"
              ItemsSource="{Binding View}"
              FilteringModel="{Binding FilteringModel}"
              AutoGenerateColumns="False"
              CanUserSortColumns="True"
              GridLinesVisibility="Horizontal"
              SelectionMode="Extended">
      <DataGrid.Columns>
        <DataGridTextColumn Width="*"
                            Header="Item"
                            Binding="{Binding Name}"
                            SortMemberPath="Name"
                            x:DataType="viewModels:BetweenFilterOperatorViewModel+BetweenRow" />
        <DataGridTextColumn Width="180"
                            Header="Quantity (Int64)"
                            Binding="{Binding Quantity}"
                            SortMemberPath="Quantity"
                            x:DataType="viewModels:BetweenFilterOperatorViewModel+BetweenRow" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
