<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pages="clr-namespace:DataGridSample.Pages"
             x:Class="DataGridSample.Pages.ClipboardExportPage"
             x:Name="Root"
             x:DataType="pages:ClipboardExportPage">

  <Grid ColumnDefinitions="320,*"
        RowDefinitions="Auto,*"
        Margin="12"
        ColumnSpacing="16"
        RowSpacing="12">

    <StackPanel Grid.Column="0"
                Grid.ColumnSpan="2"
                Spacing="4">
      <TextBlock Classes="h2">Clipboard export formats</TextBlock>
      <TextBlock Text="Choose the format ProDataGrid publishes when you press Ctrl+C. Enable HTML for a clipboard-friendly table (CF_HTML) or pick another built-in format to export alongside text."
                 TextWrapping="Wrap" />
    </StackPanel>

    <StackPanel Grid.Row="1"
                Grid.Column="0"
                Spacing="12">
      <Border BorderBrush="#d9e2ef"
              Background="#f6f8fb"
              CornerRadius="8"
              Padding="12">
        <StackPanel Spacing="6">
          <TextBlock Text="Built-in formats"
                     FontWeight="SemiBold" />
          <TextBlock Text="Choose which additional format the grid emits with the always-on plain text payload. Copy with Ctrl+C on the grid."
                     TextWrapping="Wrap"
                     Opacity="0.86" />
          <StackPanel Orientation="Vertical"
                      Spacing="4">
            <RadioButton x:Name="TextFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="Text (tab separated)"
                         IsChecked="True"
                         Checked="UpdateExportSettings" />
            <RadioButton x:Name="CsvFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="CSV (text/csv)"
                         Checked="UpdateExportSettings" />
            <RadioButton x:Name="HtmlFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="HTML table (CF_HTML + text/html)"
                         Checked="UpdateExportSettings" />
            <RadioButton x:Name="MarkdownFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="Markdown (text/markdown)"
                         Checked="UpdateExportSettings" />
            <RadioButton x:Name="XmlFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="XML (text/xml)"
                         Checked="UpdateExportSettings" />
            <RadioButton x:Name="YamlFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="YAML (text/yaml)"
                         Checked="UpdateExportSettings" />
            <RadioButton x:Name="JsonFormatRadioButton"
                         GroupName="ClipboardFormat"
                         Content="JSON (application/json)"
                         Checked="UpdateExportSettings" />
          </StackPanel>
        </StackPanel>
      </Border>

      <Border BorderBrush="#d9e2ef"
              Background="#ffffff"
              CornerRadius="8"
              Padding="12">
        <StackPanel Spacing="6">
          <TextBlock Text="Copy selection"
                     FontWeight="SemiBold" />
          <TextBlock Text="Use these quick actions to copy only one format without changing the toggles above. Make a selection in the grid first."
                     TextWrapping="Wrap"
                     Opacity="0.86" />
          <WrapPanel>
            <Button Content="Copy Text"
                    Margin="0 0 6 6"
                    Click="CopyTextFormat" />
            <Button Content="Copy CSV"
                    Margin="0 0 6 6"
                    Click="CopyCsvFormat" />
            <Button Content="Copy HTML"
                    Margin="0 0 6 6"
                    Click="CopyHtmlFormat" />
          </WrapPanel>
          <WrapPanel>
            <Button Content="Copy Markdown"
                    Margin="0 0 6 6"
                    Click="CopyMarkdownFormat" />
            <Button Content="Copy XML"
                    Margin="0 0 6 6"
                    Click="CopyXmlFormat" />
            <Button Content="Copy YAML"
                    Margin="0 0 6 6"
                    Click="CopyYamlFormat" />
            <Button Content="Copy JSON"
                    Margin="0 0 6 6"
                    Click="CopyJsonFormat" />
          </WrapPanel>
        </StackPanel>
      </Border>
    </StackPanel>

    <Border Grid.Row="1"
            Grid.Column="1"
            Background="#ffffff"
            BorderBrush="#d9e2ef"
            CornerRadius="10"
            Padding="10">
      <DataGrid x:Name="ItemsGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                HeadersVisibility="All"
                GridLinesVisibility="All"
                RowHeight="36"
                ClipboardCopyMode="IncludeHeader"
                SelectionMode="Extended"
                SelectionUnit="CellOrRowHeader"
                MinHeight="520">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Item"
                              Width="2*"
                              Binding="{Binding Name}"
                              x:DataType="pages:ClipboardSampleItem" />
          <DataGridTextColumn Header="Category"
                              Width="2*"
                              Binding="{Binding Category}"
                              x:DataType="pages:ClipboardSampleItem" />
          <DataGridTextColumn Header="Price"
                              Width="*"
                              Binding="{Binding Price, StringFormat='{}{0:C}'}"
                              x:DataType="pages:ClipboardSampleItem" />
          <DataGridTextColumn Header="Last ordered"
                              Width="*"
                              Binding="{Binding LastOrder, StringFormat='{}{0:yyyy-MM-dd}'}"
                              x:DataType="pages:ClipboardSampleItem" />
        </DataGrid.Columns>
      </DataGrid>
    </Border>
  </Grid>
</UserControl>
