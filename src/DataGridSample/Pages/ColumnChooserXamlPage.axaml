<UserControl
    x:Class="DataGridSample.Pages.ColumnChooserXamlPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
    xmlns:models="clr-namespace:DataGridSample.Models"
    xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
    x:DataType="viewModels:ColumnChooserSampleViewModel"
    d:DesignHeight="720"
    d:DesignWidth="1100"
    mc:Ignorable="d">

  <UserControl.DataContext>
    <viewModels:ColumnChooserSampleViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Classes="h2" Text="Column Chooser (XAML Columns)" />
      <TextBlock TextWrapping="Wrap"
                 Text="Toggle column visibility for columns declared directly in XAML. The First Name column is locked, while Optional Status starts hidden." />
    </StackPanel>

    <Grid Grid.Row="1"
          ColumnDefinitions="2*,*"
          ColumnSpacing="12">
      <DataGrid x:Name="XamlGrid"
                ItemsSource="{Binding Items}"
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                CanUserReorderColumns="True"
                HeadersVisibility="All"
                GridLinesVisibility="Horizontal"
                Height="460">
        <DataGrid.Columns>
          <DataGridTextColumn Header="First Name"
                              Binding="{Binding FirstName}"
                              Width="1.2*"
                              CanUserHide="False"
                              x:DataType="models:Person" />
          <DataGridTextColumn Header="Last Name"
                              Binding="{Binding LastName}"
                              Width="1.2*"
                              x:DataType="models:Person" />
          <DataGridTextColumn Header="Age"
                              Binding="{Binding Age}"
                              Width="0.7*"
                              x:DataType="models:Person" />
          <DataGridTextColumn Header="Status"
                              Binding="{Binding Status}"
                              Width="1*"
                              x:DataType="models:Person" />
          <DataGridTextColumn Header="Optional Status"
                              Binding="{Binding OptionalStatus}"
                              Width="1*"
                              IsVisible="False"
                              x:DataType="models:Person" />
          <DataGridCheckBoxColumn Header="Banned"
                                  Binding="{Binding IsBanned}"
                                  Width="0.7*"
                                  x:DataType="models:Person" />
        </DataGrid.Columns>
      </DataGrid>

      <StackPanel Grid.Column="1"
                  Spacing="8">
        <TextBlock Classes="h3" Text="Column chooser" />
        <dg:DataGridColumnChooser Width="220"
                                  HorizontalAlignment="Left"
                                  DataGrid="{Binding ElementName=XamlGrid}">
          <dg:DataGridColumnChooser.Header>
            <StackPanel Spacing="2">
              <TextBlock Text="Columns"
                         FontWeight="SemiBold" />
              <TextBlock Text="Show or hide fields"
                         FontSize="12"
                         Foreground="{DynamicResource SystemControlForegroundBaseMediumHighBrush}" />
            </StackPanel>
          </dg:DataGridColumnChooser.Header>
        </dg:DataGridColumnChooser>
        <TextBlock TextWrapping="Wrap"
                   Text="Use the flyout to toggle visibility. The chooser respects CanUserHide and remembers the column order." />
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
