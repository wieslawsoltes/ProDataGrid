<UserControl
    x:Class="DataGridSample.Pages.HierarchicalSelectionPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
    xmlns:hier="clr-namespace:Avalonia.Controls.DataGridHierarchical;assembly=Avalonia.Controls.DataGrid"
    x:DataType="viewModels:HierarchicalSelectionViewModel"
    d:DesignHeight="720"
    d:DesignWidth="1100"
    mc:Ignorable="d">

  <UserControl.DataContext>
    <viewModels:HierarchicalSelectionViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Text="Hierarchical selection + refresh"
                 FontWeight="Bold"
                 FontSize="18" />
      <TextBlock TextWrapping="Wrap"
                 Text="SelectedItem binds to the tree item (not the node); AutoScrollToSelectedItem and AutoExpandSelectedItem are enabled, and refresh/rebuild keep selection when items are reused. ItemPathSelector supplies index paths for deep selection. Flattened counts visible nodes only." />
    </StackPanel>

    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                Spacing="8">
      <Button Content="Expand all"
              Command="{Binding ExpandAllCommand}" />
      <Button Content="Collapse all"
              Command="{Binding CollapseAllCommand}" />
      <Button Content="Refresh"
              Command="{Binding RefreshCommand}" />
      <Button Content="Rebuild"
              Command="{Binding RebuildCommand}" />
    </StackPanel>

    <Grid Grid.Row="2"
          ColumnDefinitions="Auto,*"
          ColumnSpacing="16">
      <StackPanel Orientation="Horizontal"
                  Spacing="8">
        <Button Content="Select first visible"
                Command="{Binding SelectFirstVisibleCommand}" />
        <Button Content="Select last visible"
                Command="{Binding SelectLastVisibleCommand}" />
        <Button Content="Select deep item"
                Command="{Binding SelectDeepItemCommand}" />
        <Button Content="Clear selection"
                Command="{Binding ClearSelectionCommand}" />
      </StackPanel>

      <StackPanel Grid.Column="1"
                  Orientation="Horizontal"
                  Spacing="12"
                  VerticalAlignment="Center">
        <TextBlock Text="{Binding SelectedLabel}"
                   FontWeight="SemiBold" />
        <TextBlock Text="{Binding VisibleCount, StringFormat=Visible: {0}}" />
        <TextBlock Text="{Binding TotalCount, StringFormat=Total: {0}}" />
      </StackPanel>
    </Grid>

    <DataGrid Grid.Row="3"
              AutoGenerateColumns="False"
              HierarchicalModel="{Binding Model}"
              HierarchicalRowsEnabled="True"
              SelectionMode="Single"
              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
              AutoScrollToSelectedItem="True"
              AutoExpandSelectedItem="True"
              HeadersVisibility="Column"
              GridLinesVisibility="Horizontal"
              x:DataType="viewModels:HierarchicalSelectionViewModel">
      <DataGrid.Columns>
        <DataGridHierarchicalColumn Header="Name"
                                    Width="2*"
                                    x:CompileBindings="False"
                                    Binding="{Binding Item}">
          <DataGridHierarchicalColumn.CellTemplate>
            <DataTemplate x:DataType="viewModels:HierarchicalSelectionViewModel+TreeItem">
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </DataGridHierarchicalColumn.CellTemplate>
        </DataGridHierarchicalColumn>

        <DataGridTemplateColumn Header="Id"
                                Width="80"
                                x:CompileBindings="False">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="hier:HierarchicalNode">
              <TextBlock x:DataType="viewModels:HierarchicalSelectionViewModel+TreeItem"
                         DataContext="{Binding Item}"
                         Text="{Binding Id}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>

        <DataGridTemplateColumn Header="Children"
                                Width="90"
                                x:CompileBindings="False">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate x:DataType="hier:HierarchicalNode">
              <TextBlock x:DataType="viewModels:HierarchicalSelectionViewModel+TreeItem"
                         DataContext="{Binding Item}"
                         Text="{Binding Children.Count}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
