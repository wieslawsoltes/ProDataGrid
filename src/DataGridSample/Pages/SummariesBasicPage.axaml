<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.Pages.SummariesBasicPage"
             x:DataType="viewModels:SummariesBasicViewModel"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600">
  
  <UserControl.DataContext>
    <viewModels:SummariesBasicViewModel />
  </UserControl.DataContext>
  
  <Grid Margin="12" RowDefinitions="Auto,*">
    <StackPanel Spacing="4" Margin="0,0,0,8">
      <TextBlock Text="Column Summaries - Basic" FontWeight="Bold" FontSize="18" />
      <TextBlock TextWrapping="Wrap">
        This sample demonstrates basic column summaries with built-in aggregate functions.
        The Total Summary row at the bottom shows Sum, Average, Count, Min, and Max values.
      </TextBlock>
    </StackPanel>

    <DataGrid Grid.Row="1"
              ItemsSource="{Binding Orders}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="True"
              CanUserSortColumns="True"
              GridLinesVisibility="All"
              ShowTotalSummary="True"
              TotalSummaryPosition="Bottom">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Order ID" 
                            Binding="{Binding OrderId}" 
                            Width="100"
                            x:DataType="viewModels:SampleOrder">
          <DataGridTextColumn.Summaries>
            <DataGridAggregateSummaryDescription Aggregate="Count" Title="Count: " />
          </DataGridTextColumn.Summaries>
        </DataGridTextColumn>
        
        <DataGridTextColumn Header="Customer" 
                            Binding="{Binding Customer}" 
                            Width="*"
                            x:DataType="viewModels:SampleOrder">
          <DataGridTextColumn.Summaries>
            <DataGridAggregateSummaryDescription Aggregate="CountDistinct" Title="Unique: " />
          </DataGridTextColumn.Summaries>
        </DataGridTextColumn>
        
        <DataGridTextColumn Header="Product" 
                            Binding="{Binding Product}" 
                            Width="*"
                            x:DataType="viewModels:SampleOrder" />
        
        <DataGridTextColumn Header="Region" 
                            Binding="{Binding Region}" 
                            Width="80"
                            x:DataType="viewModels:SampleOrder" />
        
        <DataGridNumericColumn Header="Quantity" 
                               Binding="{Binding Quantity}" 
                               Width="80"
                               FormatString="N0"
                               x:DataType="viewModels:SampleOrder">
          <DataGridNumericColumn.Summaries>
            <DataGridAggregateSummaryDescription Aggregate="Sum" StringFormat="N0" Title="Sum: " />
          </DataGridNumericColumn.Summaries>
        </DataGridNumericColumn>
        
        <DataGridNumericColumn Header="Unit Price" 
                               Binding="{Binding UnitPrice}" 
                               Width="100"
                               FormatString="C2"
                               x:DataType="viewModels:SampleOrder">
          <DataGridNumericColumn.Summaries>
            <DataGridAggregateSummaryDescription Aggregate="Average" StringFormat="C2" Title="Avg: " />
          </DataGridNumericColumn.Summaries>
        </DataGridNumericColumn>
        
        <DataGridNumericColumn Header="Total" 
                               Binding="{Binding Total}" 
                               Width="120"
                               FormatString="C2"
                               x:DataType="viewModels:SampleOrder">
          <DataGridNumericColumn.Summaries>
            <DataGridAggregateSummaryDescription Aggregate="Sum" StringFormat="C2" Title="Total: " />
          </DataGridNumericColumn.Summaries>
        </DataGridNumericColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
