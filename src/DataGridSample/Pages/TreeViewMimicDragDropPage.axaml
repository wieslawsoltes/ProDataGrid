<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.Pages.TreeViewMimicDragDropPage"
             x:DataType="viewModels:TreeViewMimicDragDropViewModel">
  <UserControl.DataContext>
    <viewModels:TreeViewMimicDragDropViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Text="TreeView mimic with drag &amp; drop"
                 FontWeight="Bold"
                 FontSize="18" />
      <TextBlock TextWrapping="Wrap"
                 Text="Drag rows to reorder siblings while keeping the single hierarchical column and full virtualization." />
    </StackPanel>

    <TextBlock Grid.Row="1"
               Text="{Binding Summary}"
               Opacity="0.7" />

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Spacing="8">
      <Button Content="Expand all"
              Command="{Binding ExpandAllCommand}" />
      <Button Content="Collapse all"
              Command="{Binding CollapseAllCommand}" />
    </StackPanel>

    <DataGrid Grid.Row="3"
              AutoGenerateColumns="False"
              HierarchicalModel="{Binding Model}"
              HierarchicalRowsEnabled="True"
              Classes="hierarchical"
              x:DataType="viewModels:TreeViewMimicDragDropViewModel"
              HeadersVisibility="None"
              GridLinesVisibility="None"
              SelectionMode="Single"
              IsReadOnly="False"
              UseLogicalScrollable="True"
              CanUserSortColumns="False"
              CanUserResizeColumns="False"
              CanUserReorderColumns="False"
              CanUserReorderRows="True"
              RowDragHandle="Row"
              RowDragDropOptions="{Binding Options}"
              RowDropHandler="{Binding DropHandler}">
      <DataGrid.Columns>
        <DataGridHierarchicalColumn Width="*"
                                    x:CompileBindings="False"
                                    Binding="{Binding Item}">
          <DataGridHierarchicalColumn.CellTemplate>
            <DataTemplate x:DataType="viewModels:TreeViewMimicDragDropViewModel+TreeItem">
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </DataGridHierarchicalColumn.CellTemplate>
        </DataGridHierarchicalColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
