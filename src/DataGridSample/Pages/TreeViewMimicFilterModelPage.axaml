<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.Pages.TreeViewMimicFilterModelPage"
             x:DataType="viewModels:TreeViewMimicFilterModelViewModel">
  <UserControl.DataContext>
    <viewModels:TreeViewMimicFilterModelViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Text="TreeView mimic with FilteringModel"
                 FontWeight="Bold"
                 FontSize="18" />
      <TextBlock TextWrapping="Wrap"
                 Text="Filter the single hierarchical column while keeping the tree virtualized." />
    </StackPanel>

    <TextBlock Grid.Row="1"
               Text="{Binding Summary}"
               Opacity="0.7" />

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Spacing="8">
      <Button Content="Expand all"
              Command="{Binding ExpandAllCommand}" />
      <Button Content="Collapse all"
              Command="{Binding CollapseAllCommand}" />
    </StackPanel>

    <WrapPanel Grid.Row="3"
               Margin="0 4">
      <TextBlock VerticalAlignment="Center"
                 Margin="0 0 8 8"
                 Text="Filter" />
      <TextBox Width="240"
               Margin="0 0 8 8"
               Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
      <Button Content="Clear"
              Margin="0 0 8 8"
              Command="{Binding ClearFilterCommand}" />
    </WrapPanel>

    <DataGrid Grid.Row="4"
              AutoGenerateColumns="False"
              HierarchicalModel="{Binding Model}"
              HierarchicalRowsEnabled="True"
              Classes="hierarchical"
              FilteringModel="{Binding FilteringModel}"
              x:DataType="viewModels:TreeViewMimicFilterModelViewModel"
              HeadersVisibility="None"
              GridLinesVisibility="None"
              SelectionMode="Single"
              IsReadOnly="True"
              UseLogicalScrollable="True"
              CanUserSortColumns="False"
              CanUserResizeColumns="False"
              CanUserReorderColumns="False">
      <DataGrid.Columns>
        <DataGridHierarchicalColumn Width="*"
                                    SortMemberPath="Item.Name"
                                    x:CompileBindings="False"
                                    Binding="{Binding Item}">
          <DataGridHierarchicalColumn.CellTemplate>
            <DataTemplate x:DataType="viewModels:TreeViewMimicFilterModelViewModel+TreeItem">
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </DataGridHierarchicalColumn.CellTemplate>
        </DataGridHierarchicalColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
