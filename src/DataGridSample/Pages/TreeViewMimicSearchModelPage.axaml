<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             xmlns:searching="clr-namespace:Avalonia.Controls.DataGridSearching;assembly=Avalonia.Controls.DataGrid"
             x:Class="DataGridSample.Pages.TreeViewMimicSearchModelPage"
             x:DataType="viewModels:TreeViewMimicSearchModelViewModel">
  <UserControl.DataContext>
    <viewModels:TreeViewMimicSearchModelViewModel />
  </UserControl.DataContext>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Text="TreeView mimic with SearchModel"
                 FontWeight="Bold"
                 FontSize="18" />
      <TextBlock TextWrapping="Wrap"
                 Text="Search across the single hierarchical column while keeping the tree virtualized." />
    </StackPanel>

    <TextBlock Grid.Row="1"
               Text="{Binding Summary}"
               Opacity="0.7" />

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Spacing="8">
      <Button Content="Expand all"
              Command="{Binding ExpandAllCommand}" />
      <Button Content="Collapse all"
              Command="{Binding CollapseAllCommand}" />
    </StackPanel>

    <WrapPanel Grid.Row="3"
               Margin="0 4">
      <TextBlock VerticalAlignment="Center"
                 Margin="0 0 8 8"
                 Text="Query" />
      <TextBox Width="220"
               Margin="0 0 8 8"
               Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
      <Button Content="Clear"
              Margin="0 0 8 8"
              Command="{Binding ClearCommand}" />
      <Button Content="Previous"
              Margin="0 0 8 8"
              Command="{Binding PreviousCommand}" />
      <Button Content="Next"
              Margin="0 0 8 8"
              Command="{Binding NextCommand}" />
      <TextBlock VerticalAlignment="Center"
                 Margin="0 0 8 8"
                 Text="{Binding ResultSummary}"
                 Opacity="0.7" />
    </WrapPanel>

    <DataGrid Grid.Row="4"
              AutoGenerateColumns="False"
              HierarchicalModel="{Binding Model}"
              HierarchicalRowsEnabled="True"
              Classes="hierarchical"
              SearchModel="{Binding SearchModel}"
              x:DataType="viewModels:TreeViewMimicSearchModelViewModel"
              HeadersVisibility="None"
              GridLinesVisibility="None"
              SelectionMode="Single"
              IsReadOnly="True"
              UseLogicalScrollable="True"
              CanUserSortColumns="False"
              CanUserResizeColumns="False"
              CanUserReorderColumns="False">
      <DataGrid.Columns>
        <DataGridHierarchicalColumn Width="*"
                                    SortMemberPath="Item.Name"
                                    searching:DataGridColumnSearch.SearchMemberPath="Item.Name"
                                    x:CompileBindings="False"
                                    Binding="{Binding Item}">
          <DataGridHierarchicalColumn.CellTemplate>
            <DataTemplate x:DataType="viewModels:TreeViewMimicSearchModelViewModel+TreeItem">
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </DataGridHierarchicalColumn.CellTemplate>
        </DataGridHierarchicalColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
