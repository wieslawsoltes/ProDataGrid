<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             xmlns:adapters="clr-namespace:DataGridSample.Adapters"
             x:Class="DataGridSample.Pages.TreeViewMimicSortModelPage"
             x:DataType="viewModels:TreeViewMimicSortModelViewModel">
  <UserControl.DataContext>
    <viewModels:TreeViewMimicSortModelViewModel />
  </UserControl.DataContext>

  <UserControl.Resources>
    <adapters:HierarchicalSortingAdapterFactory x:Key="HierarchicalSortingAdapterFactory" />
  </UserControl.Resources>

  <Grid Margin="12"
        RowDefinitions="Auto,Auto,Auto,Auto,*"
        RowSpacing="8">
    <StackPanel Spacing="4">
      <TextBlock Text="TreeView mimic with SortingModel"
                 FontWeight="Bold"
                 FontSize="18" />
      <TextBlock TextWrapping="Wrap"
                 Text="Sort the hierarchical column while keeping the tree virtualized." />
    </StackPanel>

    <TextBlock Grid.Row="1"
               Text="{Binding Summary}"
               Opacity="0.7" />

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Spacing="8">
      <Button Content="Expand all"
              Command="{Binding ExpandAllCommand}" />
      <Button Content="Collapse all"
              Command="{Binding CollapseAllCommand}" />
    </StackPanel>

    <WrapPanel Grid.Row="3"
               Margin="0 4">
      <Button Content="Sort A-Z"
              Margin="0 0 8 8"
              Command="{Binding SortAscendingCommand}" />
      <Button Content="Sort Z-A"
              Margin="0 0 8 8"
              Command="{Binding SortDescendingCommand}" />
      <Button Content="Clear sort"
              Margin="0 0 8 8"
              Command="{Binding ClearSortCommand}" />
    </WrapPanel>

    <DataGrid Grid.Row="4"
              AutoGenerateColumns="False"
              HierarchicalModel="{Binding Model}"
              HierarchicalRowsEnabled="True"
              Classes="hierarchical"
              SortingModel="{Binding SortingModel}"
              SortingAdapterFactory="{StaticResource HierarchicalSortingAdapterFactory}"
              x:DataType="viewModels:TreeViewMimicSortModelViewModel"
              HeadersVisibility="None"
              GridLinesVisibility="None"
              SelectionMode="Single"
              IsReadOnly="True"
              UseLogicalScrollable="True"
              CanUserSortColumns="False"
              CanUserResizeColumns="False"
              CanUserReorderColumns="False">
      <DataGrid.Columns>
        <DataGridHierarchicalColumn Width="*"
                                    SortMemberPath="Item.Name"
                                    x:CompileBindings="False"
                                    Binding="{Binding Item}">
          <DataGridHierarchicalColumn.CellTemplate>
            <DataTemplate x:DataType="viewModels:TreeViewMimicSortModelViewModel+TreeItem">
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </DataGridHierarchicalColumn.CellTemplate>
        </DataGridHierarchicalColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
