<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net10.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <DefineConstants>$(DefineConstants);DATAGRID_INTERNAL</DefineConstants>
    <AssemblyName>Avalonia.Diagnostics</AssemblyName>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>../../build/avalonia.snk</AssemblyOriginatorKeyFile>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    <PackageId>ProDiagnostics</PackageId>
  </PropertyGroup>

  <PropertyGroup>
    <PackageDescription>ProDiagnostics provides developer tools and diagnostics UI for Avalonia apps, including visual tree inspection, property editing, event tracking, layout exploration, and debug overlays.</PackageDescription>
    <PackageTags>avalonia;avaloniaui;diagnostics;devtools;debugging;visualtree;inspector;prodiagnostics;net;netstandard</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="**/*.xaml.cs"
             DependentUpon="%(Filename)" />
    <Compile Include="../Avalonia.Controls.DataGrid/**/*.cs"
             Exclude="../Avalonia.Controls.DataGrid/bin/**;../Avalonia.Controls.DataGrid/obj/**"
             LinkBase="DataGrid" />
    <AvaloniaXaml Include="../Avalonia.Controls.DataGrid/Themes/Generic.xaml"
                  Link="Themes/Generic.xaml" />
    <AvaloniaXaml Include="../Avalonia.Controls.DataGrid/Themes/Simple.xaml"
                  Link="Themes/Simple.xaml" />
    <AvaloniaXaml Include="../Avalonia.Controls.DataGrid/Themes/Simple.v2.xaml"
                  Link="Themes/Simple.v2.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="../Avalonia.Controls.DataGrid/bin/**;../Avalonia.Controls.DataGrid/obj/**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" />
    <PackageReference Include="Avalonia.Controls.ColorPicker" />
    <PackageReference Include="Avalonia.Themes.Simple" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\\ProDataGrid.FormulaEngine\\ProDataGrid.FormulaEngine.csproj" />
    <ProjectReference Include="..\\ProDataGrid.FormulaEngine.Excel\\ProDataGrid.FormulaEngine.Excel.csproj" />
  </ItemGroup>

  <Import Project="../../build/SharedVersion.props" />

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <None Remove="**\*.xaml"/>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
  </ItemGroup>

</Project>
